<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/post"
    tools:context="com.blogspot.meandtips.catchtheball.result"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
       android:textSize="30sp"/>
    <ImageView
        android:id="@+id/pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_marginTop="40sp"
        />
    <TextView
        android:id="@+id/highScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score : 150"
        android:textSize="30sp"
        android:layout_marginTop="60dp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuration!"
        android:textSize="40sp"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"/>

    <Button
        android:id="@+id/postBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Post Now"
        android:textSize="30sp"
        android:textColor="@color/com_facebook_button_background_color"
        android:textAllCaps="false"
        android:onClick="tryAgain"
        android:background="@android:color/transparent"
        />



</LinearLayout>
